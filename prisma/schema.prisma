generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Chapter {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  JudulChapter String
  chapter      Int
  idManga      String
  image        String[]
}

model Genre {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model Manga {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  cover        String
  deskripsi    String
  genre        String[]
  mangaTitle   String
  published_at DateTime @db.Date
  slug         String
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}
